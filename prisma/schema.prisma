// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  role            Role?     @default(STUDENT)
  username        String?   @unique
  password        String?
  verified        Boolean?  @default(false)
  verifToken      String?   @default(uuid())
  createdProjects Project[] @relation("createdBy")
  Project         Project[] @relation("joinedBy")
  Profile         Profile?
}

model Profile {
  id        String    @id @default(uuid())
  fname     String?
  lname     String?
  dob       DateTime? @default(now())
  country   String?   @default("international")
  bio       String?
  avatar    String?   @default("monkey")
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
  createdAt DateTime  @default(now())
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  pages       Int        @default(1)
  type        Type
  technology  Technology
  creatorId   String
  joinedId    String?
  createdBy   User       @relation("createdBy", fields: [creatorId], references: [id])
  joinedBy    User?      @relation("joinedBy", fields: [joinedId], references: [id])
  status      Status     @default(PENDING)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deadline    DateTime
}

enum Role {
  STUDENT
  PROFESSOR
}

enum Type {
  MOBILE
  WEB
  BACKEND
  FULLSTACK
}

enum Technology {
  FLUTTER
  REACT
  VUEJS
  NEXTJS
  NATIVE
  STATIC
  LARAVEL
  REACTNATIVE
  ANDROID
  IOS
}

enum Status {
  PENDING
  MATCHED
  FINISHED
}
