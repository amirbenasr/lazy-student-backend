// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  role            Role?     @default(STUDENT)
  username        String?   @unique
  password        String?
  verified        Boolean?  @default(false)
  verifToken      String?   @default(uuid())
  createdProjects Project[] @relation("createdBy")
  Project         Project[] @relation("joinedBy")
  Profile         Profile?
}

model Profile {
  id      Int       @id @default(autoincrement())
  fname   String?
  lname   String?
  dob     DateTime? @default(now())
  country String?   @default("international")
  bio     String?
  avatar  String?   @default("monkey")
  user    User      @relation(fields: [userId], references: [id])
  userId  Int       @unique
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  type        Type
  technology  Technology
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deadline    DateTime
  createdBy   User       @relation("createdBy", fields: [creatorId], references: [id])
  creatorId   Int
  joinedBy    User?      @relation("joinedBy", fields: [joinedId], references: [id])
  joinedId    Int?
  status      Status     @default(PENDING)
}

enum Role {
  STUDENT
  PROFESSOR
}

enum Type {
  MOBILE
  WEB
  BACKEND
  FULLSTACK
}

enum Technology {
  FLUTTER
  REACT
  VUEJS
  NEXTJS
  NATIVE
}

enum Status {
  PENDING
  MATCHED
  FINISHED
}
